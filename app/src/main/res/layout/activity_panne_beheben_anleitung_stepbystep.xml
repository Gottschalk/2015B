<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.flo.myapplication.PanneBehebenAnleitung">

    <ImageView
        android:layout_marginTop="0dp"
        android:id="@+id/panneBeheben_anleitung_bild"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/ic_kein_bild" />

    <TextView
        android:id="@+id/panneBeheben_anleitung_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hanbremse anziehen"
        android:textColor="#ffabb1b7"
        android:textSize="20dp"
        android:layout_below="@+id/panneBeheben_anleitung_bild"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Schritt 1 / 9 "
        android:id="@+id/panne_beheben_stepTextview"
        android:layout_alignTop="@+id/panne_beheben_previousStepButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZurÃ¼ck"
        android:id="@+id/panne_beheben_previousStepButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vor"
        android:id="@+id/panne_beheben_nextStepButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
