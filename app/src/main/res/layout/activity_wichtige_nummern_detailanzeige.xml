<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.flo.myapplication.WichtigeNummernDetailanzeige">

    <TextView
        android:id="@+id/wichtige_nummern_detailanzeige_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name"
        android:textSize="30sp"
    android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/call_button_text"
        android:id="@+id/call_button"
        android:layout_below="@+id/wichtige_nummern_detailanzeige_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Telefonnummer:"
        android:id="@+id/wichtige_nummern_detailanzeige_nummer_titel"
        android:layout_alignTop="@+id/call_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adresse"
        android:id="@+id/wichtige_nummern_detailanzeige_adresse"
        android:layout_below="@+id/call_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MusterstraÃŸe 22"
        android:id="@+id/wichtige_nummern_detailanzeige_strasse"
        android:layout_below="@+id/wichtige_nummern_detailanzeige_adresse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="79795"
        android:id="@+id/wichtige_nummern_detailanzeige_plz"
        android:layout_below="@+id/wichtige_nummern_detailanzeige_strasse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Musterstadt"
        android:id="@+id/wichtige_nummern_detailanzeige_stadt"
        android:layout_below="@+id/wichtige_nummern_detailanzeige_plz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bearbeiten"
        android:id="@+id/wichtige_nummern_detailanzeige_bearbeiten_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="8398483"
        android:id="@+id/wichtige_nummern_detailanzeige_nummer"
        android:layout_below="@+id/wichtige_nummern_detailanzeige_nummer_titel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Navigation"
        android:id="@+id/wichtige_nummern_detailanzeige_navigation_button"
        android:layout_below="@+id/wichtige_nummern_detailanzeige_adresse"
        android:layout_alignLeft="@+id/call_button"
        android:layout_alignStart="@+id/call_button" />

</RelativeLayout>
