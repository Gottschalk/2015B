<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.flo.myapplication.GefahrenstelleAbsichern">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:text="Ort der Panne?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/gefahrenstelle_absichern_autobahn_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_autobahn" />

    <ImageButton
        android:id="@+id/gefahrenstelle_absichern_kurve_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_kurve" />

    <ImageButton
        android:id="@+id/gefahrenstelle_absichern_innerorts_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/gefahrenstelle_absichern_autobahn_textview"
        android:layout_alignStart="@+id/gefahrenstelle_absichern_autobahn_textview"
        android:layout_below="@+id/gefahrenstelle_absichern_autobahn_textview"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_innerorts" />

    <ImageButton
        android:id="@+id/gefahrenstelle_absichern_aussererorts_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/gefahrenstelle_absichern_kurve_button"
        android:layout_alignStart="@+id/gefahrenstelle_absichern_kurve_button"
        android:layout_alignTop="@+id/gefahrenstelle_absichern_innerorts_button"
        android:background="@drawable/ic_ausserorts" />

    <TextView
        android:id="@+id/gefahrenstelle_absichern_autobahn_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gefahrenstelle_absichern_autobahn_button"
        android:layout_below="@+id/gefahrenstelle_absichern_autobahn_button"
        android:layout_marginTop="2dp"
        android:text="Autobahn"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/gefahrenstelle_absichern_kurve_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gefahrenstelle_absichern_kurve_button"
        android:layout_below="@+id/gefahrenstelle_absichern_kurve_button"
        android:layout_marginTop="2dp"
        android:text="Kurve"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/gefahrenstelle_absichern_innerorts_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gefahrenstelle_absichern_innerorts_button"
        android:layout_below="@+id/gefahrenstelle_absichern_innerorts_button"
        android:layout_marginTop="2dp"
        android:text="Innerorts"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/gefahrenstelle_absichern_ausserorts_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gefahrenstelle_absichern_aussererorts_button"
        android:layout_below="@+id/gefahrenstelle_absichern_aussererorts_button"
        android:layout_marginTop="2dp"
        android:text="AuÃŸerorts"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />


</RelativeLayout>
